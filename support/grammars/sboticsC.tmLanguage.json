{
     "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
     "name": "sboticsC",
     "patterns": [
          {
               "include": "#keywords"
          },
          {
               "include": "#structures"
          },
          {
               "include": "#variables"
          },
          {
               "include": "#movement"
          },
          {
               "include": "#read"
          },
          {
               "include": "#write"
          },
          {
               "include": "#others"
          },
          {
               "include": "#comment"
          }
     ],
     "repository": {
          "keywords": {
               "patterns": [
                    {
                         "name": "keyword.control.sboticsC",
                         "match": "\\b(if|else|while|do|for|to|switch|case|default|return|goto|foreach|in)\\b"
                    }
               ]
          },
          "structures": {
               "patterns": [
                    {
                         "name": "structures.control.sboticsC",
                         "match": "\\b(Action|Func|Thread|Start|Join|Abort|IsAlive)\\b"
                    }
               ]
          },
          "comment": {
               "patterns": [
                    {
                         "name": "comment.control.sboticsC",
                         "match": "((\\//).*$)",
                         "captures": {
                              "1": {
                                   "name": "punctuation.definition.comment.control.sboticsC"
                              }
                         }
                    }
               ]
          },
          "variables": {
               "patterns": [
                    {
                         "name": "variables.control.sboticsC",
                         "match": "\\b(bool|byte|sbyte|float|short|ushort|int|uint|long|ulong|double|decimal|char|string|numero|booleano|texto|boolean)\\b"
                    }
               ]
          },
          "movement": {
               "patterns": [
                    {
                         "name": "movement.control.sboticsC",
                         "match": "\\b(bc.onTF|bc.openActuator|bc.closeActuator|bc.actuatorUp|bc.actuatorDown|bc.turnActuatorUp|bc.turnActuatorDown|bc.onTFRot|bc.actuatorSpeed|bc.onTFRotations|bc.onTFRight|bc.onTFLeft|bc.getonTFRight|bc.getonTFLeft|bc.turnFanOn|bc.turnFanOff|bc.motorSpeed|bc.onTF|bc.openActuator|bc.closeActuator|bc.actuatorUp|bc.actuatorDown|bc.turnActuatorUp|bc.turnActuatorDown|bc.onTFRot|bc.actuatorSpeed|bc.onTFRotations|bc.onTFRight|bc.onTFLeft|bc.getonTFRight|bc.getonTFLeft|bc.turnFanOn|bc.turnFanOff|bc.motorSpeed)\\b"
                    }
               ]
          },
          "read": {
               "patterns": [
                    {
                         "name": "read.control.sboticsC",
                         "match": "\\b(bc.distance|bc.compass|bc.detectDistance|bc.returnColor|bc.lightness|bc.returnGreen|bc.returnBlue|bc.returnRed|bc.touch|bc.angleActuator|bc.timer|bc.angleBucket|bc.heat|bc.hasVictims|bc.inclination|bc.distance|bc.compass|bc.inclination|bc.detectDistance|bc.returnColor|bc.lightness|bc.millis|bc.returnGreen|bc.returnBlue|bc.returnRed|bc.touch|bc.angleActuator|bc.timer|bc.angleBucket|bc.heat|bc.hasVictims)\\b"
                    }
               ]
          },
          "write": {
               "patterns": [
                    {
                         "name": "write.control.sboticsR",
                         "match": "\\b(bc.printLCD|bc.saveLCD|bc.stopSavingLCD|bc.eraseLCDFile|bc.writeText|bc.writeNumber|bc.writeBoolean|bc.paint|bc.stopPainting|bc.changePencilColor|bc.printLCD|bc.saveLCD|bc.stopSavingLCD|bc.eraseLCDFile|bc.writeText|bc.writeNumber|bc.writeBoolean|bc.paint|bc.stopPainting|bc.changePencilColor)\\b"
                    }
               ]
          },
          "others": {
               "patterns": [
                    {
                         "name": "others.control.sboticsR",
                         "match": "\\b(bc.wait|bc.clearLCD|bc.turnLedOn|bc.turnLedOff|bc.randomLimits|bc.resetTimer|bc.clearLCDLine|bc.colorSens|bc.setPrecision|bc.playNote|bc.playSound|bc.changeWave|bc.stopSound|bc.toFrequency|bc.toHertz|bc.playSoundHertz|bc.wait|bc.clearLCD|bc.turnLedOn|bc.turnLedOff|bc.randomLimits|bc.resetTimer|bc.clearLCDLine|bc.colorSens|bc.setPrecision|bc.playNote|bc.playSound|bc.changeWave|bc.stopSound|bc.toFrequency|bc.toHertz|bc.playSoundHertz)\\b"
                    }
               ]
          }
     },
     "scopeName": "source.sboticsC"
}